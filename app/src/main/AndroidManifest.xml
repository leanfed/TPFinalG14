<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.grupo14.tpfinalg14">

    <!-- Nodo raíz que contiene los metadatos y componentes de la app -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TPFinalG14"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="33">

        <!-- Actividad inicial que se lanza al abrir la app -->
        <!-- Define SplashActivity como LAUNCHER con intención MAIN -->
        <activity android:name=".ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad que contiene la navegación principal con fragments -->
        <activity android:name=".MainActivity"
            android:exported="true" />

        <!-- Actividad de login con diseño separado -->
        <activity android:name=".ui.login.LoginActivity" />

        <!-- Actividad de registro con su propio layout -->
        <activity android:name=".ui.registro.RegisterActivity" />

    </application>
</manifest>