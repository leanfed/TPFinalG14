<?xml version="1.0" encoding="utf-8"?>

<!--
Layout del fragmento de Vencimientos (VencimientosFragment).
Organiza una pantalla con:
- Menú superior reutilizable
- Título centrado
- Nombre de materia (en vista de detalle)
- RecyclerView para mostrar trabajos próximos a vencer
- BottomBar común

Usa DrawerLayout como contenedor raíz y ConstraintLayout para distribución precisa del contenido.
-->

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vencimientos.VencimientosFragment">

    <!-- Contenido visible del fragmento -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"
        android:padding="19dp">

        <!-- ☰ Botón de menú (reutilizable desde menú_btn.xml) -->
        <include
            android:id="@+id/btnMenu"
            layout="@layout/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Título principal -->
        <TextView
            android:id="@+id/text_vencimientos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próximos vencimientos"
            android:textSize="23sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/btnMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre de la materia actual (solo visible en modo detalle) -->
        <TextView
            android:id="@+id/textTituloMateria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materia"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textAlignment="center"
            android:visibility="gone"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@id/text_vencimientos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <!--  Lista de trabajos con vencimiento -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewVencimientos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="Lista de vencimientos"
            app:layout_constraintTop_toBottomOf="@id/textTituloMateria"
            app:layout_constraintBottom_toTopOf="@id/bottom_bar_include"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5" /> <!-- Opcional para limitar altura máxima visible -->

        <!--  BottomBar reutilizable para navegación inferior -->
        <include
            android:id="@+id/bottom_bar_include"
            layout="@layout/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>