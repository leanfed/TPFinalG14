<?xml version="1.0" encoding="utf-8"?>

<!--
Layout XML para LoginFragment (pantalla de acceso).
Contiene:
- EditText para correo electrónico
- EditText para contraseña
- Botón de ingreso
- Texto para registro
Usa ConstraintLayout para anclar elementos proporcionalmente y simular líneas inferiores personalizadas.
-->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_acceso"
    tools:context=".ui.login.LoginFragment">

    <!--  Campo de entrada de correo electrónico -->
    <EditText
        android:id="@+id/editCorreo"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:hint="Correo electrónico"
        android:background="?attr/colorSurface"
    android:padding="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_bias="0.67"
    app:layout_constraintHorizontal_bias="0.496"
    app:layout_constraintWidth_percent="0.8" />

    <!-- Línea inferior visual para editCorreo (simula subrayado con un TextView delgado) -->
    <TextView
        android:layout_width="260dp"
        android:layout_height="2dp"
        android:background="@color/gris_app"
        android:layout_marginTop="-2dp"
        app:layout_constraintTop_toBottomOf="@id/editCorreo"
        app:layout_constraintStart_toStartOf="@id/editCorreo"
        app:layout_constraintEnd_toEndOf="@id/editCorreo" />

    <!-- Campo de entrada de contraseña -->
    <EditText
        android:id="@+id/editPassword"
        android:layout_width="258dp"
        android:layout_height="46dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:background="?attr/colorSurface"
        android:padding="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editCorreo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Línea inferior visual para editPassword -->
    <TextView
        android:layout_width="258dp"
        android:layout_height="2dp"
        android:background="@color/gris_app"
        android:layout_marginTop="-2dp"
        app:layout_constraintTop_toBottomOf="@id/editPassword"
        app:layout_constraintStart_toStartOf="@id/editPassword"
        app:layout_constraintEnd_toEndOf="@id/editPassword" />

    <!-- Botón para ingresar a la app -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:padding="12dp"
        android:background="@drawable/btn_login_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintVertical_bias="0.866"
        app:layout_constraintHorizontal_bias="0.506" />

    <!-- Texto para redireccionar a pantalla de registro -->
    <TextView
        android:id="@+id/textViewR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No tienes una cuenta? Registrate"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.923" />
</androidx.constraintlayout.widget.ConstraintLayout>