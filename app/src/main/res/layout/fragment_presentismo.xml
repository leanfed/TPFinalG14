<?xml version="1.0" encoding="utf-8"?>

<!--
Layout del fragmento de Presentismo.
Organiza la vista general y detalle de presentismo con campos dinámicos que se muestran u ocultan según el estado de la UI.
Incluye una lista con historial de asistencias y una barra de navegación inferior reutilizable.
-->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="19dp"
    android:background="@drawable/home_bg">

    <!-- ☰ Menú contextual superior derecho (popup o navegación) -->
    <include
        layout="@layout/menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título principal "Presentismo" (oculto inicialmente, visible al entrar en modo detalle) -->
    <TextView
        android:id="@+id/textTituloPresentismo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presentismo"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Materia seleccionada (visible solo en vista de detalle) -->
    <TextView
        android:id="@+id/textMateriaSeleccionada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Materia"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textTituloPresentismo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Porcentaje de asistencia acumulada (solo en detalle) -->
    <TextView
        android:id="@+id/textPorcentajePresentismo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presentismo: 80%"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textMateriaSeleccionada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lista de registros de asistencia (usando RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPresentismo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textPorcentajePresentismo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"/>

    <!-- BottomBar reutilizable para navegar entre secciones -->
    <include
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>