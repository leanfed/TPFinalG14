<?xml version="1.0" encoding="utf-8"?>

<!--
Layout principal del fragmento o actividad del calendario.
Presenta un único CalendarView centrado hacia la parte inferior de la pantalla,
con una barra de navegación reutilizable ubicada en el borde inferior.
-->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="19dp"
    android:background="@drawable/calendario_bg"> <!-- Fondo personalizado con imagen -->

    <!-- CalendarView nativo de Android:
         Permite seleccionar fechas de forma visual.
         Se posiciona centrado horizontalmente y desplazado ligeramente hacia abajo (bias 0.822).
    -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="433dp"
        android:layout_height="364dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.822" />

    <!-- BottomBar: barra de navegación inferior común a toda la app.
         Incluye íconos para navegar entre Calendario, Inicio y Perfil.
         Se ubica fija al borde inferior del layout.
    -->
    <include
        android:id="@+id/bottom_bar_include"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>