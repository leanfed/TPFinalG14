<?xml version="1.0" encoding="utf-8"?>

<!--
Layout de la pantalla de "Cronograma semanal".
Contiene: menú contextual arriba, título centrado, listado de materias con días y horarios en un RecyclerView,
y una barra inferior de navegación reutilizable.
-->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="19dp"
    android:background="@drawable/home_bg"> <!-- Fondo decorativo general -->

    <!-- ☰ Menú contextual (esquina superior derecha) -->
    <include
        layout="@layout/menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/textTituloCronograma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cronograma semanal"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView donde se listan todas las materias con su día y horario -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCronograma"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/textTituloCronograma"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BottomBar con íconos de navegación inferior -->
    <include
        android:id="@+id/bottom_bar_include"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>