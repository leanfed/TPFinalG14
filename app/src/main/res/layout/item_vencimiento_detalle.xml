<?xml version="1.0" encoding="utf-8"?>

<!--
Layout de tarjeta para ítems de vencimientos individuales.
Esta CardView presenta de forma clara el tipo de entrega y su fecha programada. Es ideal para usarse dentro
de un RecyclerView que liste varios trabajos/tareas/exámenes próximos.
-->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">     <!-- Sombrado para generar profundidad -->

    <!-- Contenedor visual interno de la tarjeta -->
<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="12dp">

<!-- Tipo de entrega (TP, Parcial, Tarea.) -->
<TextView
    android:id="@+id/textTipo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tipo"
    android:textSize="15sp"
    android:textStyle="bold"
    android:textColor="@android:color/darker_gray"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<!-- Fecha límite de entrega -->
<TextView
    android:id="@+id/textFecha"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Entrega: --/--"
    android:textSize="14sp"
    android:textColor="@android:color/holo_red_dark"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toBottomOf="@id/textTipo"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>