<?xml version="1.0" encoding="utf-8"?>

<!--
Layout para ítem del RecyclerView en vista de detalle de presentismo.
Usa CardView como contenedor con esquinas redondeadas, sombra, y padding interno.
Ideal para mostrar una asistencia individual y, solo en la primera tarjeta, el título "Presentismo" y el porcentaje acumulado.
-->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <!-- Contenedor interno con disposición vertical y centrada -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!--  Título "Presentismo" (solo visible en la primera tarjeta del adaptador) -->
        <TextView
            android:id="@+id/textTituloPresentismoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presentismo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Porcentaje acumulado (también solo para la primera tarjeta) -->
        <TextView
            android:id="@+id/textPorcentajePresentismoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80%"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/textTituloPresentismoDetalle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Fecha del registro de asistencia -->
        <TextView
            android:id="@+id/textFechaAsistencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: --/--"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Estado de asistencia -->
        <TextView
            android:id="@+id/textEstadoAsistencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Asistido"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/textFechaAsistencia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>